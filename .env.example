# ============================================
# Rocket Site Builder - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# ============================================

# ============================================
# REQUIRED - Database (Supabase)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# REQUIRED - GHL Connection (Primary Backend)
# ============================================
# Get these from your GHL sub-account
# Settings → Integrations → Private Integrations

GHL_LOCATION_ID=your-location-id
GHL_LOCATION_PIT=pit-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Optional - For agency-level features
GHL_COMPANY_ID=your-company-id
GHL_AGENCY_PIT=pit-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ============================================
# REQUIRED - Session/Auth
# ============================================
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-super-secret-key-change-this

# Public URL of your site (used for callbacks, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ============================================
# REQUIRED - AI Providers (at least one)
# ============================================
# Anthropic - https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI (optional fallback) - https://platform.openai.com/
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# REQUIRED - Deployment (Vercel)
# ============================================
# Get from Vercel Dashboard → Settings → Tokens
VERCEL_TOKEN=your-vercel-token

# Optional - For team deployments
VERCEL_TEAM_ID=team_xxxxxxxxxxxxxxxx

# ============================================
# OPTIONAL - Additional MCP Integrations
# ============================================

# Stripe - https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Canva - https://www.canva.dev/
CANVA_CLIENT_ID=your-client-id
CANVA_CLIENT_SECRET=your-client-secret
CANVA_ACCESS_TOKEN=your-access-token

# Google (Drive, Calendar, etc.) - https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_ACCESS_TOKEN=your-access-token
GOOGLE_REFRESH_TOKEN=your-refresh-token

# Notion - https://www.notion.so/my-integrations
NOTION_TOKEN=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Slack - https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SLACK_SIGNING_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub - https://github.com/settings/tokens
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# OPTIONAL - Analytics & Tracking
# ============================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FB_PIXEL_ID=xxxxxxxxxxxxxxxx

# ============================================
# OPTIONAL - Email (for notifications)
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@example.com

# ============================================
# DEVELOPMENT
# ============================================
# Set to 'development' locally, 'production' on deploy
NODE_ENV=development

# Enable debug logging
DEBUG=false
